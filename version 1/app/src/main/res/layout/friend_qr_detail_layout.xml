<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="@drawable/rect_border_purple"
        android:gravity="center"
        android:text="XXX"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/qr_image"
        android:layout_width="155dp"
        android:layout_height="158dp"
        android:layout_below="@+id/header_title"
        android:layout_alignStart="@+id/lat"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rect_border_grey"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/worth"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/qr_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Score"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/worth"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Latitude"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/log"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/lat"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Longitude"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/log"
        android:layout_centerHorizontal="true"

        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Description"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/sim"
        android:layout_width="122dp"
        android:layout_height="55dp"

        android:layout_alignTop="@+id/qr_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/qr_image"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Similarity"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/comment_textbox"
        android:layout_width="236dp"
        android:layout_height="50dp"

        android:layout_alignBottom="@+id/comments_list"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Comment here"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_below="@+id/log"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"></androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/comment_textbox"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/comment_textbox"
        android:background="@drawable/round_border"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <ImageView
        android:id="@+id/yes"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="13dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <ImageView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="18dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />


</RelativeLayout>
