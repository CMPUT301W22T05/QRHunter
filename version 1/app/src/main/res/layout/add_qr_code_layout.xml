<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/picture_imageView"
        android:layout_width="162dp"
        android:layout_height="159dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/score_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/score_textView"
        android:layout_width="158dp"
        android:layout_height="61dp"
        android:layout_marginBottom="360dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/upload_picture_button"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="65dp"
        android:text="Upload Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_qr_button"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <Button
        android:id="@+id/add_qr_button"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="42dp"
        android:text="Add QR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/upload_picture_button"
        app:layout_constraintTop_toBottomOf="@+id/score_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>