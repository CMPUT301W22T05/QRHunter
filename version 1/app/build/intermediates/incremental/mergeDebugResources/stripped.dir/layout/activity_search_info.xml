<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <TextView
        android:id="@+id/header_title"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="@drawable/rect_border_purple"
        android:gravity="center"
        android:text="XXX's Profile"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/total_score"
        android:layout_width="280dp"
        android:layout_height="69dp"
        android:layout_below="@+id/header_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Total Score"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/contact_info"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_below="@+id/total_score"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rect_border_grey"
        android:gravity="center"
        android:hint="Contact Information"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/QR_list"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_below="@+id/contact_info"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>
